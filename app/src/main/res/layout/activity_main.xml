<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raj.minuteio.MainActivity">

    <android.opengl.GLSurfaceView

        android:id="@+id/gl_surface"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="top"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/record_your_sample_text"
        android:layout_height="wrap_content"
        android:layout_below="@id/gl_surface"
        android:layout_marginTop="20dp"
        android:text="Record Your Voice Sample"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="25dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mic_register_btn"
        android:layout_alignEnd="@+id/record_your_sample_text"
        android:layout_below="@+id/record_your_sample_text"
        android:layout_marginEnd="61dp"
        android:layout_marginTop="26dp"
        android:textColor="#000000"
        android:visibility="invisible"
         />
</RelativeLayout>